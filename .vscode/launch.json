    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}/app",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "program": "${workspaceRoot}/app/index.js",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": ["-r", "dotenv/config"]
        },
    ]
}